{
  "environment": "production",
  "application": {
    "name": "Sprint Pilot",
    "version": "1.0.0"
  },
  "database": {
    "host": "neon.tech",
    "port": 5432,
    "pool_size": 10
  },
  "storage": {
    "provider": "cloudflare_r2",
    "bucket": "sprint-pilot-docs"
  },
  "features": {
    "rag_search": true,
    "document_indexing": true,
    "vector_embeddings": true,
    "hybrid_search": true
  },
  "limits": {
    "max_file_size_mb": 2,
    "max_doc_size": 100000
  }
}
